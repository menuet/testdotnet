<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">


  <Target
    Name="PixlTargetGenerateAssemblyVersionFile"
    BeforeTargets="CoreCompile"
    >
    <ItemGroup>
      <_PixlItemAssemblyVersionFileLines Include="// This file is automatically generated by the msbuild target PixlTargetGenerateAssemblyVersionFile in the file Pixl.Cs.targets" />
      <_PixlItemAssemblyVersionFileLines Include="using System.Reflection%3B" />
      <_PixlItemAssemblyVersionFileLines Include="[assembly: AssemblyVersion(%22$(PixlPropPackageIdentifier)%22)]" />
      <_PixlItemAssemblyVersionFileLines Include="[assembly: AssemblyFileVersion(%22$(PixlPropPackageIdentifier)%22)]" />
    </ItemGroup>
    <PropertyGroup>
      <_PixlPropGeneratedAssemblyVersionPath>$(IntermediateOutputPath)\auto-generated\assemblyversion\AssemblyVersion.cs</_PixlPropGeneratedAssemblyVersionPath>
    </PropertyGroup>
    <MakeDir Directories="$([System.IO.Path]::GetDirectoryName($(_PixlPropGeneratedAssemblyVersionPath)))" />
    <WriteLinesToFile File="$(_PixlPropGeneratedAssemblyVersionPath)" Lines="@(_PixlItemAssemblyVersionFileLines)" Overwrite="true" />
  </Target>


</Project>
